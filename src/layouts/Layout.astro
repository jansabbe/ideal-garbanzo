---
interface Props {
    title: string;
}

const { BASE_URL } = import.meta.env;
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{title}</title>
        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Merriweather:wght@400;700;900&display=fallback"
            rel="stylesheet"
        />
        <meta name="description" content="SoCraTes Unconference in Belgium" />
        <link rel="icon" href={`${BASE_URL}/favicon.ico`} />
        <link
            rel="apple-touch-icon"
            href={`${BASE_URL}/apple-touch-icon.png`}
        />
        <meta name="generator" content={Astro.generator} />
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    @font-face {
        font-family: "Fallback";
        src: local(Georgia);
        size-adjust: 105%;
        ascent-override: 90%;
        descent-override: 24%;
    }
    :root {
        --font-family: "Merriweather", "Fallback", system-ui, sans-serif;
        --accent: 136, 58, 234;
        --accent-light: 224, 204, 250;
        --accent-dark: 49, 10, 101;
        --accent-gradient: linear-gradient(
            45deg,
            rgb(var(--accent)),
            rgb(var(--accent-light)) 30%,
            white 60%
        );
    }
    html {
        font-family: var(--font-family);
        background: #13151a;
    }
    code {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }
</style>
